
	<div class="page-header">
		<h1>Listando usuarios</h1>
	</div>

	<table class="table table-bordered table-striped">
		<thead>
		  <tr>
		    <th>Nombre</th>
		    <th>Apellido</th>
		    <th>Login</th>
		    <th>&nbsp;</th>
		    <th colspan="3"></th>
		  </tr>
		</thead>
		<tbody>
			<% @usuarios.each do |usuario| %>
			  <tr>
			    <td><%= usuario.nombre %></td>
			    <td><%= usuario.apellido %></td>
			    <td><%= usuario.login %></td>
			    <td><%= "carga planificación" if usuario.carga_planificacion %></td>
			    <td><%= link_to 'Ver', usuario %></td>
			    <td><%= link_to 'Editar', edit_usuario_path(usuario) %></td>
			    <td><%= link_to 'Destruir', usuario, confirm: '¿Está seguro?', method: :delete %></td>
			  </tr>
			<% end %>
		</tbody>
	</table>

	<div class="form-actions">
		<%= link_to 'Nuevo usuario', new_usuario_path, :class => 'btn btn-primary' %>
	</div>
