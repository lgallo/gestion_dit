
	<div class="page-header">
		<h1>Listando &aacute;reas</h1>
	</div>

	<table class="table table-bordered table-striped">
		<thead>
		  <tr>
		    <th>Nombre</th>
		    <th></th>
		    <th></th>
		    <th></th>
		  </tr>
		</thead>
		<tbody>
			<% @areas.each do |area| %>
			  <tr>
			    <td><%= area.nombre %></td>
			    <td><%= link_to 'Ver', area %></td>
			    <td><%= link_to 'Editar', edit_area_path(area) %></td>
			    <td><%= link_to 'Destruir', area, confirm: '¿Está seguro?', method: :delete %></td>
			  </tr>
			<% end %>
		</tbody>
	</table>

	<div class="form-actions">
		<%= link_to 'Nueva área', new_area_path, :class => 'btn btn-primary' %>
	</div>
