<%= form_for(@planificacion, :html => { :class => 'form-horizontal' } ) do |f| %>
  <% if @planificacion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@planificacion.errors.count, "error") %> prohibited this planificacion from being saved:</h2>

      <ul>
      <% @planificacion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<legend>Planificaci&oacute;n</legend>

  	<div class="control-group">
    	<%= f.label :mes, :class => 'control-label' %>
    	<div class="controls"><%= select_meses f, :mes %></div>
  	</div>  	
  	<div class="control-group">
    	<%= f.label :anio, :class => 'control-label' %>
    	<div class="controls"><%= select_anios(f, :anio) %></div>    
  	</div>  
  	<div class="control-group">
		<%= f.label :cantidad_personas , :class => 'control-label' %>
    	<div class="controls"><%= f.number_field :cantidad_personas %></div>
  	</div>
  	<div class="control-group">
		<%= f.label :dias_mes , :class => 'control-label' %>
    	<div class="controls"><%= f.number_field :dias_mes %></div>
  	</div>
  	<div class="control-group">
		<%= f.label :coeficiente_ajuste , :class => 'control-label' %>
    	<div class="controls"><%= f.text_field :coeficiente_ajuste %></div>
  	</div>
  	<div class="control-group">
		<%= f.label :dias_totales , :class => 'control-label' %>
    	<div class="controls"><%= f.number_field :dias_totales %></div>
  	</div>
  	<div class="control-group">
		<%= f.label :area , :class => 'control-label' %>
    	<div class="controls"><%= f.select :area_id, @areas %></div>
  	</div>
  
	<div class="form-actions">
    	<%= f.submit :value => 'Grabar', :class => 'btn-primary' %>
    	<%= link_to 'Volver', planificaciones_path, :class => 'btn' %>
    </div>

<% end %>
