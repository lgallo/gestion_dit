
	<%= form_for(@planificacion_requerimiento, :html => { :class => 'form-horizontal' } ) do |f| %>
  		<% if @planificacion_requerimiento.errors.any? %>
    		<div id="error_explanation">
      			<h2><%= pluralize(@planificacion_requerimiento.errors.count, "error") %> prohibited this planificacion_requerimiento from being saved:</h2>

      			<ul>
      				<% @planificacion_requerimiento.errors.full_messages.each do |msg| %>
        				<li><%= msg %></li>
      				<% end %>
      			</ul>
    		</div>
  		<% end %>

  		<%= f.hidden_field :planificacion_id %>
    	<legend><%= @planificacion_requerimiento.planificacion.descripcion %></legend>
  
  		<% unless @planificacion_requerimiento.requerimiento.nil? %>
  	<div class="left">
	  	<div class="left">
		  <p>
		  	<b>Nro. RQ.:</b>
		  	<%= @planificacion_requerimiento.requerimiento.numero %>
		  </p>
		  <p>
		  	<b>Descripci&oacute;n:</b>
		  	<%= @planificacion_requerimiento.requerimiento.descripcion %>
		  </p>
		  <p>
		  	<b>Fecha fin estimada:</b>
		  	<%= @planificacion_requerimiento.requerimiento.fecha_fin_estimada %>
		  </p>
	  	</div>
	  	<div class="right">
		  <p>
		  	<b>D&iacute;as estimados:</b>
		  	<%= @planificacion_requerimiento.requerimiento.dias_estimados %>
		  </p>
		  <p>
		  	<b>Dedicaci&oacute;n previa:</b>
		  	<%= @planificacion_requerimiento.dedicacion_previa %>
		  </p>
		  <p>
